# awbot/envs/.env.example
# Global environment variable template for all bot environments
# Copy this file to each bot's .env and override as needed.
# Local overrides can be added in each bot's .env file.

########################################
# Core Bot Settings
########################################

BOT_NAME=awbot
BOT_ENV=development
LOG_LEVEL=info

########################################
# Discord Settings
########################################

DISCORD_TOKEN=your-discord-token-here
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_GUILD_ID=your-discord-guild-id

########################################
# Cloud Integration
########################################

CLOUD_API_KEY=your-cloud-api-key
CLOUD_REGION=us-east-1

########################################
# Database Settings
########################################

DB_HOST=localhost
DB_PORT=5432
DB_USER=awbot
DB_PASSWORD=your-db-password
DB_NAME=awbot_db

########################################
# Optional: DJS (Discord.js) Specific
########################################

DJS_PREFIX=!
DJS_OWNER_ID=your-owner-id

########################################
# Optional: DPY (discord.py) Specific
########################################

DPY_PREFIX=!
DPY_OWNER_ID=your-owner-id

########################################
# Other Service Integrations
########################################

REDIS_URL=redis://localhost:6379
SENTRY_DSN=

########################################
# Deployment/CI/CD
########################################

CI=true
GITHUB_TOKEN=your-github-token

########################################
# Instructions
########################################
# 1. Copy this file to each bot's .env file (e.g., awbot/envs/bot/.env)
# 2. Override any values specific to the bot/environment in the local .env
# 3. Do NOT commit secrets to version control!
# 4. Use awbot/envs/deploy_envs.sh to automate env deployment (see script for details)